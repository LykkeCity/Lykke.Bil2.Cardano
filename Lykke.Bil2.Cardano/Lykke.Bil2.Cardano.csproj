    <Version>1.0.0</Version>
    <Authors>Lykke</Authors>
    <Company>Lykke</Company>
    <Product>Lykke.Bil2.Cardano</Product>
    <Description>C# bindings for cardano-c lib</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Include="libcardano_c.dylib" Pack="true" PackagePath="runtimes\osx-x64\native" />
  </ItemGroup>

  <ItemGroup>
    <None Update="libcardano_c.*">
